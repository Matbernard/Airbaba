<%= form_for(:flat, url:'/', method:'get') do |f|%>
  <%= f.label :city, 'City' %>
  <%= f.text_field :city, placeholder: 'Paris' %>
  <%= f.label :start_date, 'Start date' %>
  <%= f.date_field :start_date %>
  <%= f.label :end_time, 'End date' %>
  <%= f.date_field :end_time %>
  <%= f.submit 'Search' %>
<% end %>


<h1>Salam !!</h1>

<h1>Here are all the flats available on AIR BABOUCH !</h1>

<table>
  <thead>
    <tr>
      <th>Image</th>
      <th>Title</th>
      <th>Address</th>
      <th>Day price</th>
      <th>Description</th>
      <th>Tags</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @flats.each do |flat| %>
      <tr>
        <td><% if flat.pictures.first %>
          <%= image_tag flat.pictures.first.picture(:thumb) %>
          <% end %>
        </td>
        <td><%= link_to flat.title, flat_path(flat) %></td>
        <td><%= flat.address %></td>
        <td><%= flat.day_price %></td>
        <td><%= flat.description %></td>
        <td><% flat.tags.each do |t| %>
          <%= t.name %>
          <% end %>
        </td>

      </tr>
    <% end %>
  </tbody>
</table>

